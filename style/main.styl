// VARIABLES

color-dark = #333
color-dark-high = color-dark + 44%
color-dark-medium = color-dark + 60%
color-dark-low = color-dark + 76%
color-light = #FFF
color-light-high = color-light - 5%
color-accent = #D00149

font-weight-medium = 500
font-weight-light = 300

size-grid = 0.8rem
size-grid-half = size-grid / 2
size-line = 0.2rem








// SET UP

html
  height              100%
  font-size           62.5%

body
  height              100%
  font-family         'Roboto', sans-serif
  color               color-dark

*
  margin              0
  padding             0
  text-decoration     none
  outline             none
  border              none
  -webkit-box-sizing  border-box
  -moz-box-sizing     border-box
  box-sizing          border-box

li
  list-style          none

img
  display             block

a
  color               inherit
  cursor              pointer









// TYPOGRAPHY

h2, h3, h4, strong, p.weak
  font-weight         font-weight-medium

h2
  font-size           size-grid * 3
  line-height         size-grid * 3.5

h3
  font-size           size-grid * 2.5
  line-height         size-grid * 3
  margin-bottom       size-grid * 2

h4
  font-size           size-grid * 2
  line-height         size-grid * 2.5

p
  font-size           size-grid * 1.75
  line-height         size-grid * 2.5
  font-weight         font-weight-light
  margin-top          size-grid

nav li, h1, .button
  text-transform      uppercase
  font-weight         font-weight-light

nav li, h1
  font-size           size-grid * 2.5
  line-height         size-grid * 2.5

.button
  font-size           size-grid * 2
  line-height         size-grid * 2.5

p.weak
  color               color-dark-medium !important









// HEADER

header
  width               100%
  padding             size-grid * 7
  border-bottom       size-line solid color-light-high
  display             flex
  justify-content     space-between
  background          color-light
  z-index             3

  nav
    ul
      display             flex
      justify-content     flex-end

    ul
      li
        padding-left        size-grid * 3

      &:first-child
        padding-left        0








// ACTIONS

li a
  padding             size-grid 0
  border-bottom       size-line solid color-dark
  transition          border-bottom 0.5s ease-out

li a:hover
  transition          border-bottom 0.5s ease-in
  border-bottom       size-line solid color-light

.button
  width               auto
  margin-top          size-grid * 3
  padding             size-grid size-grid * 2
  border              size-line solid color-dark
  display             inline-block
  cursor              pointer
  transition          background 0.5s ease-out, color 0.5s ease-out

  &:hover
    background          color-dark
    color               color-light

  button-with-icon(img,img-hover)
    position            relative // Help breaks home page
    padding-right       size-grid * 5

    &::after
      content             ''
      width               size-grid * 2
      height              size-grid * 2
      display             inline-block
      position            absolute
      top                 50%
      transform           translateY(- 50%)
      right               size-grid * 2
      background          url(img) no-repeat
      transition          background 0.5s ease-out

    &:hover::after
      background          url(img-hover) no-repeat

  &.next
    button-with-icon("../assets/layout/icon-arrow-next.svg", "../assets/layout/icon-arrow-next-hover.svg")

  &.start
    button-with-icon("../assets/layout/icon-arrow-start.svg", "../assets/layout/icon-arrow-start-hover.svg")








// SECTIONS

section
  width               100%
  padding             size-grid * 3.5
  display             flex

aside
  width               size-grid * 46
  padding             size-grid * 3.5
  flex-shrink         0

main
  padding             size-grid * 3.5

article
  width               100%
  height              size-grid * 32
  padding             size-grid * 4
  margin-bottom       size-grid * 2
  background          color-light-high
  position            relative
  display             flex
  justify-content     space-between

  h3
    margin-bottom       0

  .glimpse
    width               size-grid * 37.5
    height              size-grid * 24
    margin-left         size-grid * 4

  a.button
    position            absolute
    bottom              size-grid * 4
    left                size-grid * 4

  &:last-child
    margin-bottom        0








// PAGE

section.page
  justify-content     space-between








// ARTICLE




//// Article navigation

nav.article
  width               100%
  padding             size-grid * 2 size-grid * 7
  border-bottom       size-line solid color-light-high
  display             flex
  justify-content     space-between
  align-items         center
  position            fixed
  top                 0
  left                0
  background          color-light
  z-index             2
  opacity             0.95
  display             none // Modify after nav interactions

  a
    margin              0
  h3
    margin              0


//// Article intro

section.article.intro
  height              calc(100% - 20.4rem)
  justify-content     space-between
  background          color-light-high

  aside
    position          relative

    .actions
      position            absolute
      bottom              size-grid * 3.5
      left                size-grid * 3.5

      a.button
        margin-top          0
        margin-right        size-grid

        &:last-child
          margin-right        0

  main
    display             flex
    align-items         center

    img
      width             100%




//// Article content

section.article.content
  display             flex
  justify-content     center

  main
    width               size-grid * 107

  h2, h3, h4, strong, p.weak
    &:first-child
      margin-top          0
    &:last-child
      margin-bottom       0

  h2
    margin-top          size-grid * 5
    margin-bottom       size-grid * 2

  h3
    margin-top          size-grid * 4
    margin-bottom       size-grid * 3

  h4
    margin-top          size-grid * 3
    margin-bottom       size-grid * 2

section.article.content.main
  img
    width               100%
    margin-top          size-grid * 2
    margin-bottom       size-grid * 2

section.article.content.retro
  background           color-light-high








// END
